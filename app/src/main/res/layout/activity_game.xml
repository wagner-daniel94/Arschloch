<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".GameActivity">

    <Button
        android:id="@+id/playBtn"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/buttonborder"
        android:text="play"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/passBtn"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonborder"
        android:text="pass"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/playBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="570dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/card1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:onClick="markCard"
            android:tag="Card1"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card1"
            android:onClick="markCard"
            android:tag="Card2"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card3"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card2"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card4"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card3"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card5"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card4"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card6"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card5"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card7"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card6"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card8"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card7"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card9"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card8"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card10"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card9"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card11"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card10"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card12"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card11"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/card13"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-40dp"
            android:layout_toEndOf="@id/card12"
            android:onClick="markCard"
            app:srcCompat="@drawable/back" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="239dp"
        android:layout_height="101dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toStartOf="@+id/IVop3"
        app:layout_constraintStart_toEndOf="@+id/IVop1"
        app:layout_constraintTop_toBottomOf="@+id/IVop2">

        <ImageView
            android:id="@+id/middlecard1"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/middlecard2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/middlecard1"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/middlecard3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/middlecard2"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/middlecard4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/middlecard3"
            app:srcCompat="@drawable/back" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/IVop1"
        android:layout_width="50dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/IVop2"
        android:layout_width="50dp"
        android:layout_height="84dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/IVop3"
        android:layout_width="50dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="102dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/passBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/TVacop1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/TVop1"
        android:layout_width="91dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="516dp"
        android:text="Opponent1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/IVop1"
        app:layout_constraintEnd_toStartOf="@+id/TVop3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="242dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="111dp"
        android:text="Opponent2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toStartOf="@+id/IVop2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVop3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        android:text="Opponent3"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVacop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="13"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/IVop1"
        app:layout_constraintEnd_toEndOf="@+id/IVop1"
        app:layout_constraintStart_toStartOf="@+id/IVop1"
        app:layout_constraintTop_toBottomOf="@+id/TVop1" />

    <TextView
        android:id="@+id/TVacop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/IVop2"
        app:layout_constraintEnd_toEndOf="@+id/IVop2"
        app:layout_constraintStart_toStartOf="@+id/IVop2"
        app:layout_constraintTop_toTopOf="@+id/IVop2" />

    <TextView
        android:id="@+id/TVacop3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/IVop3"
        app:layout_constraintEnd_toEndOf="@+id/IVop3"
        app:layout_constraintStart_toStartOf="@+id/IVop3"
        app:layout_constraintTop_toTopOf="@+id/IVop3" />


</android.support.constraint.ConstraintLayout>