<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainGameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    tools:context=".GameActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/gameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:layout_editor_absoluteX="-182dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:id="@+id/handCardLayout"

            android:layout_width="0dp"
            android:layout_height="0dp"


            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:maxWidth="50dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playBtn">


            <ImageView
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:onClick="markCard"
                android:tag="Card1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card1"
                android:layout_weight="1"
                android:onClick="markCard"
                android:tag="Card2"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card2"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card3"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card4"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card5"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card6"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card7"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card8"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card9"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card10"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card11"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/card13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="-40dp"
                android:layout_toEndOf="@id/card12"
                android:layout_weight="1"
                android:onClick="markCard"
                app:srcCompat="@drawable/back" />


        </LinearLayout>

        <TextView
            android:id="@+id/TVop1"
            android:layout_width="91dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:text="Opponent1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/middleCardLayout"
            android:layout_width="393dp"
            android:layout_height="102dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintBottom_toTopOf="@+id/playBtn"
            app:layout_constraintEnd_toStartOf="@+id/TVacop3"
            app:layout_constraintStart_toEndOf="@+id/IVop1"
            app:layout_constraintTop_toBottomOf="@+id/IVop2">

            <ImageView
                android:id="@+id/middlecard1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/middlecard2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/middlecard1"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/middlecard3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/middlecard2"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />

            <ImageView
                android:id="@+id/middlecard4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/middlecard3"
                android:layout_weight="1"
                app:srcCompat="@drawable/back" />
        </LinearLayout>

        <TextView
            android:id="@+id/TVCardsPlayedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="text"
            android:textColor="#FFFFFF"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/middleCardLayout"
            app:layout_constraintStart_toEndOf="@+id/TVop1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/TVop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            android:layout_marginTop="16dp"
            android:text="Opponent2"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/IVop3"
            android:layout_width="50dp"
            android:layout_height="84dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVop3"
            app:srcCompat="@drawable/back" />

        <Button
            android:id="@+id/passBtn"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"


            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/buttonborder"
            android:text="pass"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/playBtn"
            app:layout_constraintTop_toBottomOf="@+id/middleCardLayout" />

        <TextView
            android:id="@+id/TVacop3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/IVop3"
            app:layout_constraintEnd_toEndOf="@+id/IVop3"
            app:layout_constraintStart_toStartOf="@+id/IVop3"
            app:layout_constraintTop_toTopOf="@+id/IVop3" />

        <Button
            android:id="@+id/playBtn"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/buttonborder"
            android:text="play"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/middleCardLayout" />

        <ImageView
            android:id="@+id/IVop1"
            android:layout_width="50dp"
            android:layout_height="84dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TVop1"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/IVop2"
            android:layout_width="69dp"
            android:layout_height="59dp"
            android:rotation="90"
            app:layout_constraintStart_toEndOf="@+id/TVop2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/TVacop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/IVop2"
            app:layout_constraintEnd_toEndOf="@+id/IVop2"
            app:layout_constraintStart_toStartOf="@+id/IVop2"
            app:layout_constraintTop_toTopOf="@+id/IVop2" />

        <TextView
            android:id="@+id/TVop3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="16dp"
            android:text="Opponent3"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVacop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/IVop1"
            app:layout_constraintEnd_toEndOf="@+id/IVop1"
            app:layout_constraintStart_toStartOf="@+id/IVop1"
            app:layout_constraintTop_toTopOf="@+id/IVop1" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/wishLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideInset"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="-228dp"
        tools:layout_editor_absoluteY="-30dp">

        <Spinner
            android:id="@+id/spinner"
            style="@android:style/Widget.Spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:entries="@array/card_values"
            android:scrollbarStyle="outsideOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="You are the winner!\nYou can wish a card from the loser"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/IwantCardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/buttonborder"
            android:text="I want this card!"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/IwantNoCardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/buttonborder"
            android:text="I want no card!"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/IwantCardBtn" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>